Rules
 
 
!! !!Consonant gradation rules

! lägg in htt:ht här 
"Consonant Gradation for htt(j|s):ht(j|s)"
!! __@RULENAME@__  
t:0 <=> Vow: h t _ ( j | s ) (Vow:+) (Cns:+) ( Dummy: ) WeG: ;

"Consonant Gradation for xdn:xn"
!! __@RULENAME@__  
d:0 <=> Vow: Cx _ n (j) (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
     where Cx in ( j v l ) ;


         
!"Consonant Gradation for httj:htj"
!!! __@RULENAME@__  ACS: hddj finst inte, httj finst
!t:0 <=> h t _ j (Vow:+) (Cns:+) ( Dummy: ) WeG: ;

"Consonant Gradation for hxx:hx"
!! __@RULENAME@__  
Cx:0 <=> Vow: h Cx _ (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
     where Cx in (p k ) ;

"Consonant Gradation for xx:x"
!! __@RULENAME@__  
Cx:0 <=> Vow: Cx _   ( Vow:+ (Cns:+)) ( Dummy: ) WeG: ;
     where Cx in ( t k m n s r l f j v ) ; ! OBS fjerna j pga av ijja, och in igen för ijja

"Consonant Gradation for xxy:xy"
!! __@RULENAME@__  
!Cx:0 <=> Vow: Cx _ Cy                   (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
 Cx:0 <=> Vow: Cx _ Cy ([g|j|k|m|n|s|t]) (Vow:+) (Cns:+) ( Dummy: ) WeG: ; 
 where Cx in ( b b b b b b b d d d d f f f g g g g j j j j j j j j j j j j k k k l l l l l l l l l l m m m m n n n n p p r r r r r r r r r r s s s s s s t t t t ŋ ŋ ŋ v v v v v v v )
       Cy in ( d j l m n r t j k n v d n t d l ŋ v b d g p t k l r s v m t s t v j b d f g k p s t v b g p s d j s t s t b d f g j k p s t v j k n p t v j k m s g k n d k l r g s t )  
          matched ;
         
"Consonant Gradation for xy:y"
!! __@RULENAME@__  
!Cx:0 <=> Vow: _       Cy (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
 Cx:0 <=> Vow (Vow:) _ Cy (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
     where Cx in ( d d )
           Cy in ( j n )  
          matched ;

!! !!Consonant Gradation for hx:x

"Delete h"
!! __@RULENAME@__  
h:0  <=> Vow _ Cx: (j) (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
    where Cx in (p t k) ;

"Delete h before ts"
!! __@RULENAME@__  
h:0 <=> Vow+ _ t s Vow:+ (Cns:+) ( Dummy: ) WeG: ;
   
!€ buhtts^WGoj
!€ bå0ts0oj
 
"change unvoiced to voiced"
!! __@RULENAME@__  
Cx:Cy <=> h: _ ([Vow:+  (Cns:+)]) ( Dummy: ) WeG: ;
    where Cx in (p t k)
          Cy in (b d g)
          matched ;

"Consonant Gradation for xN:N"
!! __@RULENAME@__  
Cx:0 <=> Vow [l|r|v|j] _ Cy (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
!     <=> Vow           _ Cy (Vow:+) (Cns:+) ( Dummy: ) WeG: ;
    where Cx in (b g g )
          Cy in (m n ŋ )
          matched ;
          


! "Steggo or not xxy vs xyy"
! !! __@RULENAME@__  
